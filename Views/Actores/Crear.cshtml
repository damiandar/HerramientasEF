@model Actores


@using (@Html.BeginForm(null,null,FormMethod.Post,new {enctype="multipart/form-data"}))
{

<div class="form-group">
    @Html.LabelFor(p => p.Nombre)
    @Html.TextBoxFor(p=> p.Nombre,new {@class="form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(p => p.Apellido)
    @Html.TextBoxFor(p=> p.Apellido,new {@class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(p=>p.Foto)
    <div class="custom-file">
        @Html.TextBoxFor(p=>p.Foto, new {type="file",@class="form-control custom-file-input"})
        @Html.LabelFor(p=>p.Foto,"Seleccionar Foto",new { @class="custom-file-label"})
    </div>
</div>

    <input type="submit" class="btn btn-primary" value="Guardar" />

}

@section Scripts{
    <script>
        $(document).ready(function(){
            $('.custom-file-input').on("change",function(){
                var nombreArchivo=$(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(nombreArchivo);
            });
        });
    </script>
}

