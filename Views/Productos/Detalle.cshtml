@model Producto

<h2>Datos del producto</h2>

<div class="form-group">
    @Html.LabelFor(p =>p.Id)
    
    @Html.TextBoxFor(p =>p.Id,new {@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(p =>p.Nombre)
    
    @Html.TextBoxFor(p =>p.Nombre,new {@class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(p =>p.Marca)
    
    @Html.TextBoxFor(p =>p.Marca,new {@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(p =>p.Tamanio.Descripcion)
    
    @Html.TextBoxFor(p =>p.Tamanio.Descripcion,new {@class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(p =>p.Categoria.Nombre)
    
    @Html.TextBoxFor(p =>p.Categoria.Nombre,new {@class="form-control"})
</div>