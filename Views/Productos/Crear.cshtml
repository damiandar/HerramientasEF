@model Producto

<h2>Datos del producto</h2>
@using ( @Html.BeginForm())
{
    
 

<div class="form-group">
    @Html.LabelFor(p =>p.Nombre)
    
    @Html.TextBoxFor(p =>p.Nombre,new {@class="form-control"})
</div>
<div class="form-group">
    @Html.LabelFor(p =>p.Marca)
    
    @Html.TextBoxFor(p =>p.Marca,new {@class="form-control"})
</div>

<div class="form-group">
    @Html.LabelFor(p =>p.Precio)
    
    @Html.TextBoxFor(p =>p.Precio,new {@class="form-control"})
</div>
<input type="submit" class="btn btn-primary" value="Guardar">
}